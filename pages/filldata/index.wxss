page{
  background:#FEFFFF;
}
.info {
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:20%;
  /* background: gray; */
  text-align: center;
}
.info label{
  color:  #FD7675;
  font-family: 'PingFang';
  font-weight: lighter;
}
.info_title{
  margin: 30rpx;
  font-family: 'PingFang';

  font-size: 50rpx;
  color: #222;
}
.info_num{
  font-size: 80rpx;
  color: #FD7675;
  margin: 10rpx;
  font-family: 'PingFang';
  font-weight: lighter;
}
.info_line{
  font-size: 80rpx;
  background: #71BEE8;
  width: 5rpx;
  height: 100rpx;
  margin-bottom: -25rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  display: inline-block;
}

.touch-container {
  position:fixed;
  top:20%;
  left:0;
  width:100%;
  height:40%;
  /* background: gray; */
  text-align: center;
  border-top: 2px solid #EEE;
}
.img {
  position: absolute;
  width: 690rpx;
  height: 300rpx;
  transform-origin: center center;
}
.img_container{
  position: absolute;
  left: 0%;
  right: 30%;
  width: 400rpx;
  height: 400rpx;
  transform-origin: center center;
  top:15%;
}
.img_container_bottom{
  position: absolute;
  left: 0%;
  right: 0%;
  height: 20%;
  bottom: 0px;
  background: white;
  color: #888;
  font-family: 'PingFang';
  font-weight: lighter;
  text-align: center;
}



.banner{
  position:fixed;
  top:60%;
  left:0;
  width:100%;
  height:15%;
  text-align: center;
  border-top: 2px solid #EEE;
  background: #FEFFFF;
}

.swiperClass {
  margin: 0;
  margin-top: 80rpx;
}

.slide-image {
  width: 250rpx; 
  height:90rpx;
  position: relative;
}

image.active {
  transform: none;
  transition: all 0.2s ease-in 0s;
  border-bottom: 2px solid #FD7675;
} 

image.quiet {
  transform: scale(0.6);
  transition: all 0.2s ease-in 0s;
}


.banner_bottom{
  position:fixed;
  top:78%;
  left:0;
  width:100%;
  height:22%;
  text-align: center;
  background: #FEFFFF;
  color: #888;
  font-family: 'PingFang';
  font-weight: lighter;
}

.sureBtn{
  color: white;
  background: #FD7675;
  margin: 10px;
}